<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainActivity">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.dariushm2.stockify.view.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" >
        <action
            android:id="@+id/actionMainTOAddSymbol"
            app:destination="@id/addSymbolActivity"/>
    </activity>

    <activity
        android:id="@+id/addSymbolActivity"
        android:name="com.dariushm2.stockify.view.addSymbol.AddSymbolActivity"
        android:label="activity_add_symbol"
        tools:layout="@layout/fragment_add_symbol" />
    <fragment
        android:id="@+id/booksListFragment"
        android:name="com.dariushm2.stockify.view.booksList.BooksListFragment"
        android:label="fragment_books_list"
        tools:layout="@layout/fragment_books_list" />
</navigation>